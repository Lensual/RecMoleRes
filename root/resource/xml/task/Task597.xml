<Tasks ID="597" Name="跳过火山的勇士" AwardMsg="恭喜你获得20个火神纹章！" AwardBean="" >

	<!-- 永夜哨站  -->
	<Step ID="1" TarMapID="342">
		<NPC ID="10216" Option="跳过火山的勇士"  MapID="" >
			
			<Action Cmd="SAY" >
				<Talk NpcID="10216" Face="正常" Msg="{$username}，艾莲娜很想见识真正的火山，你能偷偷带我去吗？" Option="好啊，我们出发吧！"/>
				<Talk NpcID="10213" Face="正常" Msg="艾莲娜，我的女儿，你要上哪儿去？" Option=""/>
				<Talk NpcID="10216" Face="焦急" Msg="爸爸！我……我就想去看一眼火山……" Option=""/>
				<Talk NpcID="10213" Face="正常" Msg="恩……作为父亲不能总是保护过度，应该支持女儿的想法。" Option=""/>
			</Action>
			
			<Action Cmd="TASK_SHOW_SELF" Hide="1"/>
			
			<Action Cmd="PLAY_MOVIE" Param="1" Name="movie_1" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="SAY" >
				<Talk NpcID="10213" Face="正常" Msg="{$username}，拿着这个神马护身符！" Option=""/>
				<Talk NpcID="10213" Face="正常" Msg="你要好好保护艾莲娜！要是艾莲娜出了什么差错……（巴图鲁的肌肉嘎嘣作响）" Option="我……我一定会保护好她！"/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_1" />
			
			<Action Cmd="PLAY_MOVIE" Param="1000" Name="movie_1000" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="DELETE_MOVIE" Param="movie_1000" />
			
			<Action Cmd="SET_BUFFER" Panel="2" Step="2" />
			<Action Cmd="GO_MAP" MapID="341" MapType="0" />
		</NPC>	
	</Step>
	
	
	<!-- 火山场景 -->
	<Step ID="2" TarMapID="341">
		<EnterMap MapID="341">
			<Action Cmd="TASK_SHOW_SELF" Hide="1"/>
			
			<Action Cmd="PLAY_MOVIE" Param="2" Name="movie_2" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="SAY" >
				<Talk NpcID="10216" Face="正常" Msg="{$username}，这里比龙巢迷宫还要热！" Option=""/>
				<Talk NpcID="10197" Face="正常" Msg="没错，你知道摩尔庄园火神杯的由来吗？相传能够不畏惧浓烟和酷热，跳过火山口的摩尔，才是最勇敢的摩尔。" Option=""/>
				<Talk NpcID="10216" Face="正常" Msg="原来还有这样的说法！摩尔庄园果然很有趣~" Option=""/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_2" />
			
			<Action Cmd="PLAY_MOVIE" Param="3" Name="movie_3" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="SAY" >
				<Talk NpcID="10197" Face="焦急" Msg="（怎么办？眼前都是浓烟和岩浆，我能跳过去吗？但是……我答应过巴图鲁要保护好艾莲娜的！艾莲娜是我的朋友啊！）" Option=""/>
				<Talk NpcID="10216" Face="焦急" Msg="{$username}，救我！" Option=""/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_3" />
			
			<Action Cmd="PLAY_MOVIE" Param="100" Name="movie_100" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="DELETE_MOVIE" Param="movie_100" />
			
			<Action Cmd="PLAY_MOVIE" Param="4" Name="movie_4" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="SAY" >
				<Talk NpcID="10197" Face="焦急" Msg="艾莲娜，你没事吧？" Option=""/>
				<Talk NpcID="10216" Face="正常" Msg="我没事！可我们要怎么回去呢？" Option=""/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_4" />
			
			
			<Action Cmd="PLAY_MOVIE" Param="5" Name="movie_5" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="SAY" >
				<Talk NpcID="10197" Face="焦急" Msg="（奇怪，岩石怎么会自己回到岸边？）" Option=""/>
				<Talk NpcID="10216" Face="正常" Msg="不管怎么说，{$username}，谢谢你救了我！原来你就是跳过火山的真正勇士呀！" Option=""/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_5" />
			
			<Action Cmd="PLAY_MOVIE" Param="101" Name="movie_101" IsBg="1" IsFullScreen="1" />	
			<Action Cmd="DELETE_MOVIE" Param="movie_101" />
			
			<Action Cmd="TASK_SHOW_SELF" Hide="0"/>
			<Action Cmd="OVER" MapID="344"/>
		</EnterMap>
	</Step>
</Tasks>