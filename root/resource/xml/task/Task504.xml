			<Action Cmd="DELETE_MOVIE" Param="movie_56" />				
			<Action Cmd="SET_BUFFER" Panel="3" Step="3" />
			<Action Cmd="GO_MAP" MapID="260" MapType="0" />
		</EnterMap>																						
	</Step>	

