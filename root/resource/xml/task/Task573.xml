<Tasks ID="573" Name="消失的愿望" AwardMsg="恭喜你获得20个许愿星、10个经验果实！" AwardBean="" >

	<!-- 布多多布少少房间  -->
	<Step ID="1" TarMapID="237">
		<EnterMap MapID="237">
			<Action Cmd="TASK_SHOW_SELF" Hide="1"/>
			<Action Cmd="SET_ATTRIBUTE" Level="buttonLevel" ResName="npc_10010" Visible="0" />
			<Action Cmd="SET_ATTRIBUTE" Level="buttonLevel" ResName="npc_10011" Visible="0" />
			<Action Cmd="PLAY_MOVIE" Param="1" Name="movie_1" IsBg="1" IsFullScreen="1"/>	
			<Action Cmd="SAY" >
				<Talk NpcID="10000" Face="正常" Msg="{$username}，快来，多多少少遇到了件怪事，让他们再给你讲讲。" Option="噢？是什么事情呢？"/>
				<Talk NpcID="10010" Face="正常" Msg="{$username}，昨晚有个黑影从我们窗边飘过，鬼鬼祟祟的，接着就是一阵奇怪的声音，吓得我和少少躲被窝里不敢出来。" Option="啊？！不会和清明节有关吧？！"/>
				<Talk NpcID="10011" Face="正常" Msg="哈哈，{$username}，看你怕怕的样子。还有下文呢，你先听多多说完！" Option="哪，哪儿有，我才不怕呢！o(╯□╰)o"/>
				<Talk NpcID="10010" Face="正常" Msg="没想到，天亮后我和少少在门口发现了一个大礼包，里面竟然是我最喜欢吃的水果，和少少盼了好久的“美滋滋”枕头，太神奇了！" Option="啊？这么好！"/>
				<Talk NpcID="10011" Face="正常" Msg="是呀，这些东西，刚好就是我和少少前天在许愿池前许的愿望呢，没想到这么灵验！" Option="我许的愿望怎么从来没实现过？"/>
				<Talk NpcID="10000" Face="正常" Msg="一定是神仙显灵！庄园的五周年庆典就快来了，神仙专程来为我们庆祝、来实现我们的愿望！" Option="真的吗？我咋觉得有点怪怪的……"/>
				<Talk NpcID="10000" Face="正常" Msg="别多想了，机会难得，我也得赶紧去许个愿。{$username}，你也一起吧！" Option="那……我跟你去看看吧！"/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_1" />
			<Action Cmd="SET_BUFFER" Panel="2" Step="2" />
			<Action Cmd="GO_MAP" MapID="2" MapType="0" />
		</EnterMap>	
	</Step>
	
	<!-- 爱心广场 -->
	<Step ID="2" TarMapID="2">
		<EnterMap MapID="2">
			<Action Cmd="TASK_SHOW_SELF" Hide="1"/>
			<Action Cmd="PLAY_MOVIE" Param="2" Name="movie_2" IsBg="1" IsFullScreen="1"/>	
			<Action Cmd="SAY" >
				<Talk NpcID="10000" Face="开心" Msg="哇哦~~~我想得凤凰坐骑的愿望总算能实现咯！{$username}，你也快想想自己的愿望吧！" Option="额……我先看看~"/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_2" />
			<Action Cmd="PLAY_MOVIE" Param="3" Name="movie_3" IsBg="1" IsFullScreen="1"/>	
			<Action Cmd="SAY" >
				<Talk NpcID="10000" Face="开心" Msg="大功告成，嘿嘿~很快我就可以得到凤凰坐骑咯！" Option="我怎么觉得许愿池和往常不大一样了"/>
				<Talk NpcID="10000" Face="开心" Msg="别多想啦，{$username}，咱们先回去，我今天要等着神仙给我送了凤凰来才睡觉。" Option="噢，好吧( ⊙ o ⊙ )"/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_3" />
			<Action Cmd="SET_BUFFER" Panel="3" Step="3" />
			<Action Cmd="GO_MAP" MapID="239" MapType="0" />
		</EnterMap>
	</Step>
	
	<!-- 摩乐乐家-->
	<Step ID="3" TarMapID="239">
		<EnterMap MapID="239">
			<Action Cmd="TASK_SHOW_SELF" Hide="1"/>
			<Action Cmd="SET_ATTRIBUTE" Level="depthLevel" ResName="npc_10000" Visible="0" />
			<Action Cmd="PLAY_MOVIE" Param="100" Name="movie_100" IsBg="1" IsFullScreen="1"/>
			<Action Cmd="DELETE_MOVIE" Param="movie_100" />
			<Action Cmd="PLAY_MOVIE" Param="4" Name="movie_4" IsBg="1" IsFullScreen="1"/>
