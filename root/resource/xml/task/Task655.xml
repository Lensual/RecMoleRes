			<Action Cmd="DELETE_MOVIE" Param="movie_1"/>
			
			<Action Cmd="PLAY_MOVIE" Param="2" Name="movie_2" IsBg="1" IsFullScreen="1"/>
			<Action Cmd="SAY">
				<Talk NpcID="10258" Face="正常" Msg="大伯~~~~~飞飞回来了~~~~飞飞听闪电说要举行火神杯了！！！！！飞飞要玩火炬，飞飞要玩火炬嘛~！ " Option=""/>
				<Talk NpcID="10291" Face="正常" Msg="飞飞乖，勇敢的小摩尔们才能传递神火的哟！" Option=""/>
				<Talk NpcID="10258" Face="疑惑" Msg="为什么？那飞飞不做拉姆了，飞飞也做摩尔，飞飞不管，飞飞要玩火炬嘛~" Option=""/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_2"/>
			
			<Action Cmd="SET_BUFFER" Panel="2" Step="2"/>
			<Action Cmd="GO_MAP" MapID="53" MapType="0"/>
